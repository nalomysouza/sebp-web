{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@assets/*": [
        "src/assets/*"
      ],
      "@environment/*": [
        "src/environments/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@auth/*": [
        "src/app/auth/*"
      ],
      "@core/*": [
        "src/app/core/*"
      ],
      "@helpers/*": [
        "src/app/helpers/*"
      ],
      "@pages/*": [
        "src/app/pages/*"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ],
    }
  },
  "files": [
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
