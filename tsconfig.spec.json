/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine"
    ],
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@environment/*": ["src/environments/*"],
      "@app/*": ["src/app/*"],
      "@auth/*": ["src/app/auth/*"],
      "@core/*": ["src/app/core/*"],
      "@helpers/*": ["src/app/helpers/*"],
      "@pages/*": ["src/app/pages/*"],
      "@shared/*": ["src/app/shared/*"],
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
